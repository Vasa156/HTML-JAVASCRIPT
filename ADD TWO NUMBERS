<!DOCTYPE html>
<html>
  <head>
    <title>Hello World!</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
      <input type="number" id="num1" placeholder="Enter a first number">
<input type="number" id="num2" placeholder="Enter a second number">
<button id="submit">Add</button>
<p id="output"></p>


      <script>
        let num1 = document.getElementById("num1");
        let num2 = document.getElementById("num2");
        let button = document.getElementById("submit");
        let output = document.getElementById("output");

    button.addEventListener("click", function(){
    let firstNum = num1.value;
    let secondNum = num2.value;
    let total = Number(firstNum) + Number(secondNum);
    output.textContent = "The total is "+total;
});
      </script>
  </body>
</html>
